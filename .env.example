# Kafka Configuration
KAFKA_BROKER=localhost:9092
KAFKA_TOPIC=events
KAFKA_GROUP_ID=anomaly-ingest-group
KAFKA_AUTO_OFFSET_RESET=earliest
KAFKA_SESSION_TIMEOUT_MS=10000

# Redis Configuration
REDIS_URL=redis://localhost:6379/0
REDIS_RAW_EVENTS_KEY=raw_events
REDIS_PROCESSED_PREFIX=event:

# Processing Configuration
BATCH_SIZE=100
MAX_QUEUE_SIZE=10000
POLL_TIMEOUT=1.0

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# Application Configuration
APP_NAME=anomaly-detection
ENVIRONMENT=development

# Processor Configuration
WINDOW_SECONDS=300.0
ANOMALY_THRESHOLD=3.0
ANOMALY_MIN_COUNT=5
SLEEP_ON_EMPTY=0.1

# Alerts Configuration
ALERTS_CHANNEL=anomalies

# Email Configuration (optional)
EMAIL_ENABLED=false
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
EMAIL_FROM=alerts@anomaly-detection.com
EMAIL_TO=admin@example.com,ops@example.com
EMAIL_RATE_LIMIT_SECONDS=60.0
